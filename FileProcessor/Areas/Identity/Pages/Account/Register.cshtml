@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 rounded" style="width: 450px;">
        <h2 class="text-center mb-3">@ViewData["Title"]</h2>
        <hr />

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-2" role="alert"></div>

            <!-- Email Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Password Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Register Button -->
            <button id="registerSubmit" type="submit" class="w-100 btn btn-primary">Register</button>
        </form>

        <p><a asp-page="./Login"class ="text-decoration-none">Already register?</a></p>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
